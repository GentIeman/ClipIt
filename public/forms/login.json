{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Sign in",
  "description": "Scheme of the login form",
  "type": "object",
  "properties": {
    "email": {
      "type": "string",
      "name": "email",
      "label": "Email",
      "placeholder": "Enter your email",
      "size": "lg"
    },
    "password": {
      "type": "string",
      "name": "password",
      "label": "Password",
      "placeholder": "Enter password",
      "size": "lg"
    },
    "required": [
      "email",
      "password"
    ]
  }
}